<div class="item-detail">
  <h1><%= @item.name %></h1>
  <p><%= @item.description %></p>
  <p>Quantity: <%= @item.quantity %></p>
  
  <div class="item-actions">
    <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary' %>
    <%= link_to 'Back', items_path, class: 'btn btn-secondary' %>
  </div>
</div>
